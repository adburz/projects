<Window x:Class="LibraryProject.Windows.LibraryMainWindow.Views.Admin.UsersTab.ScopeUser_SendNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryProject.Windows.LibraryMainWindow.Views.Admin.UsersTab"
        mc:Ignorable="d"
        Title="Send Notification" 
        Height="140" Width="230" 
        ResizeMode="NoResize">
    <StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label Content="Enter Message:" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"/>
            <TextBox x:Name="Message_TextBox" HorizontalAlignment="Center" VerticalAlignment="Center"  TextWrapping="Wrap" Grid.Row="1"  Width="185" Height="45" />
            <Button Click="SendNotification_Click" Margin="5 5 19 5" Content="Send notification" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="2"/>
        </Grid>
    </StackPanel>
</Window>
